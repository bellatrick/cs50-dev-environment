{
    "name": "CS50 Development Environment",
    "image": "mcr.microsoft.com/devcontainers/universal:linux",
    "features": {
        "ghcr.io/devcontainers/features/python:1": {
            "version": "3.10"
        }
    },
    "postCreateCommand": "sudo apt-get update && sudo apt-get install -y build-essential gcc gdb make valgrind && cd /tmp && git clone https://github.com/cs50/libcs50.git && cd libcs50 && make install && cd / && rm -rf /tmp/libcs50 && pip install -r requirements.txt",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-vscode.cpptools",
                "ms-vscode.cmake-tools",
                "streetsidesoftware.code-spell-checker"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/usr/local/bin/python",
                "python.linting.enabled": true,
                "python.formatting.provider": "black",
                "C_Cpp.default.includePath": [
                    "/usr/local/include"
                ]
            }
        }
    },
    "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/${localWorkspaceFolderBasename},type=bind",
    "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
    "remoteUser": "root"
}