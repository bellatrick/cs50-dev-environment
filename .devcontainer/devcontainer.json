{
    "name": "CS50 Development Environment",
    "image": "mcr.microsoft.com/devcontainers/universal:linux",
    "features": {
        "ghcr.io/devcontainers/features/python:1": {
            "version": "3.10"
        }
    },
 "postCreateCommand": "sudo apt-get update && sudo apt-get install -y wget software-properties-common && wget -q https://packagecloud.io/cs50/repo/gpgkey -O - | sudo apt-key add - && echo 'deb https://packagecloud.io/cs50/repo/ubuntu/ focal main' | sudo tee /etc/apt/sources.list.d/cs50.list && sudo apt-get update && sudo apt-get install -y libcs50 build-essential gcc gdb make valgrind && pip install -r requirements.txt",

    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-vscode.cpptools",
                "ms-vscode.cmake-tools",
                "streetsidesoftware.code-spell-checker"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/usr/local/bin/python",
                "python.linting.enabled": true,
                "python.formatting.provider": "black",
                "C_Cpp.default.includePath": [
                    "/usr/include/cs50"
                ]
            }
        }
    },
    "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/${localWorkspaceFolderBasename},type=bind",
    "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}"
}
